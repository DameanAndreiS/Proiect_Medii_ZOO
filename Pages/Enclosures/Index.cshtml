@model Proiect_Medii_ZOO.Pages.Enclosures.IndexModel

@{
    ViewData["Title"] = "Enclosures";
}

<h1>Enclosures</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure[0].EnclosureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure[0].Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enclosure) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.EnclosureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
